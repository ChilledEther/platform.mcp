name: TypeScript CI
on: [push, pull_request]
jobs:
  build:
    name: Build {{.ProjectName}}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Use Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
      - run: npm ci
      - run: npm test
