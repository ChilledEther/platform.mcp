{
  "name": "generate_workflows",
  "description": "Generates GitHub Actions workflow content for a project",
  "inputSchema": {
    "type": "object",
    "properties": {
      "project_name": {
        "type": "string",
        "description": "The name of the project"
      },
      "docker": {
        "type": "boolean",
        "description": "Whether to include Docker-related workflows",
        "default": false
      },
      "workflow_type": {
        "type": "string",
        "description": "The type of workflow to generate (go, typescript, python)",
        "enum": ["go", "typescript", "python"],
        "default": "go"
      }
    },
    "required": ["project_name"]
  }
}
